{
  "name": "crm-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run -w apps/web build && npm run -w apps/server build",
    "dev:web": "npm run -w apps/web dev",
    "dev:server": "npm run -w apps/server dev",
    "dev:desktop": "npm run -w apps/desktop dev",
    "dev:win": "powershell -ExecutionPolicy Bypass -File ./scripts/dev-win.ps1",
    "seed": "npm run -w @crm/server seed",
    "test:analytics": "npm run -w @crm/server test:analytics",
    "fmt": "prettier -w .",
    "lint": "echo 'lint not configured yet'"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  }
}
